{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017"],
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules", "**/node_modules/**/*"]
}
